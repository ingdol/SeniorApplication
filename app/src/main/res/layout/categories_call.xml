<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".AllCategories"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/back_white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/search_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="전화 걸기"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CEF0FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="@drawable/call5"
                        android:onClick="myListener3"
                        tools:ignore="OnClick">

                        <TextView
                            android:id="@+id/tocall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="130dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="25dp"
                            android:text="전화 걸기"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="43dp"
                            android:layout_height="38dp"
                            android:layout_alignLeft="@id/tocall"
                            android:layout_alignEnd="@id/tocall"
                            android:layout_alignBottom="@id/tocall"
                            android:layout_alignParentLeft="false"
                            android:layout_marginEnd="-10dp"
                            android:layout_marginBottom="25dp"
                            app:srcCompat="@drawable/next_btn" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:background="@drawable/call6">

                        <TextView
                            android:id="@+id/tocall2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="150dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="25dp"
                            android:text="단축번호로 전화 걸기"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="43dp"
                            android:layout_height="38dp"
                            android:layout_alignLeft="@id/tocall2"
                            android:layout_alignEnd="@id/tocall2"
                            android:layout_alignBottom="@id/tocall2"
                            android:layout_alignParentLeft="false"
                            android:layout_marginEnd="-10dp"
                            android:layout_marginBottom="25dp"
                            app:srcCompat="@drawable/next_btn" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="432dp"
                        android:layout_height="220dp"
                        android:background="@drawable/call7">

                        <TextView
                            android:id="@+id/tocall3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="130dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="25dp"
                            android:text="연락처 이용해 전화 걸기"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="43dp"
                            android:layout_height="38dp"
                            android:layout_alignLeft="@id/tocall3"
                            android:layout_alignEnd="@id/tocall3"
                            android:layout_alignBottom="@id/tocall3"
                            android:layout_alignParentLeft="false"
                            android:layout_marginEnd="-10dp"
                            android:layout_marginBottom="25dp"
                            app:srcCompat="@drawable/next_btn" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="-5dp"
                        android:background="@drawable/call9">

                        <TextView
                            android:id="@+id/tocall4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="130dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="25dp"
                            android:text="잠금 화면에서 전화 걸기"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="43dp"
                            android:layout_height="38dp"
                            android:layout_alignLeft="@id/tocall4"
                            android:layout_alignEnd="@id/tocall4"
                            android:layout_alignBottom="@id/tocall4"
                            android:layout_alignParentLeft="false"
                            android:layout_marginEnd="-10dp"
                            android:layout_marginBottom="25dp"
                            app:srcCompat="@drawable/next_btn" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="425dp"
                        android:layout_height="220dp"
                        android:background="@drawable/call8">

                        <TextView
                            android:id="@+id/tocall5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="130dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="25dp"
                            android:text="국제 전화 걸기"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="43dp"
                            android:layout_height="38dp"
                            android:layout_alignLeft="@id/tocall5"
                            android:layout_alignEnd="@id/tocall5"
                            android:layout_alignBottom="@id/tocall5"
                            android:layout_alignParentLeft="false"
                            android:layout_marginEnd="-10dp"
                            android:layout_marginBottom="25dp"
                            app:srcCompat="@drawable/next_btn" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>